<div class="session_form">
  <div class="session_form__card">
    <%= render 'shared/logo'%>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="field form-group">
        <%= f.label :first_name, "Nombre:" %><br />
        <span class="session_form--alert_error"><%= resource.errors.full_messages_for(:first_name)[0] if resource.errors.has_key?(:first_name) %></span>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first-name", class:"form-control #{resource.errors.has_key?(:first_name) ? 'color-control--error' : 'color-control'}" %>
      </div>

      <div class="field">
        <%= f.label :last_name, "Apellido:" %><br />
        <span class="session_form--alert_error"><%= resource.errors.full_messages_for(:last_name)[0] if resource.errors.has_key?(:last_name) %></span>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last-name", class:"form-control #{resource.errors.has_key?(:last_name) ? 'color-control--error' : 'color-control'}" %>
      </div>

      <div class="field">
        <%= f.label :email, "Correo electrónico:" %><br />
        <span class="session_form--alert_error"><%= resource.errors.full_messages_for(:email)[0] if resource.errors.has_key?(:email) %></span>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control #{resource.errors.has_key?(:email) ? 'color-control--error' : 'color-control'}" %>
      </div>

      <div class="field">
        <%= f.label :password, "Contraseña:" %>
        <% if @minimum_password_length %>
          <em>(Mínimo <%= @minimum_password_length %> caracteres)</em>
        <% end %><br />
        <span class="session_form--alert_error"><%= resource.errors.full_messages_for(:password)[0] if resource.errors.has_key?(:password) %></span>
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control #{resource.errors.has_key?(:password) ? 'color-control--error' : 'color-control'}" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "Confirmar Contraseña:" %><br />
        <span class="session_form--alert_error"><%= resource.errors.full_messages_for(:password_confirmation)[0] if resource.errors.has_key?(:password_confirmation) %></span>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control #{resource.errors.has_key?(:password_confirmation) ? 'color-control--error' : 'color-control'}" %>
      </div>

      <div class="actions d-flex justify-content-center my-4">
        <%= f.submit "Crear Cuenta", class:"btn btn-primary px-4" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
