<div class="text-center reset__password-content">
  <div class="reset__password-box">
    <%= image_tag "reset-password.svg", alt: "icon-reset-password", class:"image-reset-password" %>
    <h2>Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, placeholder:"Ej: correo@gmail.com", autocomplete: "email" %>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", class:"btn-reset-password" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
